---
import Layout from "../layouts/Layout.astro";
import StatsList from "../components/StatsList.astro";
import ColumnCardList from "../components/ColumnCardList.astro";
import configurations from "../../photographer-portfolio";
---

<Layout>
  <div
    class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8"
    style="padding-top: 8%;"
  >
    <div class="grid gap-16 lg:grid-cols-2 lg:gap-24">
      <img
        class="mx-auto h-auto w-full max-w-xl rounded-3xl"
        width="576"
        height="864"
        src={configurations.about.image.source}
        alt={configurations.about.image.title}
      />
      <div class="flex flex-col gap-10">
        <div class="space-y-8 sm:space-y-12">
          <h2 class="text-3xl font-medium tracking-tight sm:text-4xl">
            {configurations.about.title}
          </h2>
          <div class="space-y-6">
            {
              configurations.about.paragraphs.length > 0 ? (
                configurations.about.paragraphs.map((paragraph) => (
                  <p class="text-primary-950/70 dark:text-primary-200/70 text-base sm:text-lg">
                    {paragraph.content}
                  </p>
                ))
              ) : (
                <p class="text-primary-950/70 dark:text-primary-200/70 text-base sm:text-lg">
                  NONE
                </p>
              )
            }
          </div>
        </div>
      </div>
    </div>
  </div>
  {configurations.about.statistics.enabled && <StatsList />}
  {configurations.about.columnCards.enabled && <ColumnCardList />}
</Layout>
