---
import configurations from "../../photographer-portfolio";
---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <dl class="grid gap-6 lg:grid-cols-3">
      {
        configurations.contacts.rowCards.items.map((card) => (
          <div class="bg-primary-500/10 dark:bg-primary-400/10 rounded-3xl px-6 py-8">
            <dt class="sr-only">{card.title}</dt>
            <dd class="flex h-full flex-col justify-between gap-12">
              <svg
                class="text-primary-600 dark:text-primary-400 h-6 w-6"
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                aria-hidden="true"
              >
                <path d={card.svgIcon} />
              </svg>
              <div class="text-base font-medium">
                {card.paragraphs.map((paragraph) => (
                  <p>{paragraph.content}</p>
                ))}
              </div>
            </dd>
          </div>
        ))
      }
    </dl>
  </div>
</section>
