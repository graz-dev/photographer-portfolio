---
import MasonryGallery from "./MasonryGallery.astro";
import configurations from "../../photographer-portfolio";

---

<section class="py-16 sm:py-20">
  <div class="mx-auto max-w-2xl px-4 sm:px-6 lg:max-w-7xl lg:px-8">
    <div class="flex flex-col gap-16">
      <div class="flex flex-col items-start gap-8 sm:gap-10">
        <div class="flex max-w-xl flex-col items-start gap-4 sm:gap-6">
          <h1
            class="lg:text-9xl text-4xl font-medium tracking-tight sm:text-5xl"
          >
            {configurations.homepage.title}
          </h1>
          <p
            class="text-lg text-primary-950/70 dark:text-primary-200/70 sm:text-xl"
          >
            {configurations.homepage.subtitle}
          </p>
        </div>
      </div>
      <MasonryGallery />
    </div>
  </div>
</section>